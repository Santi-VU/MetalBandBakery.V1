@model MetalBandBakery.MVC.ViewsModels.ListBakeViewModel

@{
    ViewBag.Title = "Bake";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products list stock of @Model.Warehouse</h2>
<table class="table">
    <tr>
        <th>Sort</th>
        <th>Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th></th>
    </tr>
    
    @foreach (var i in Model.bakes)
    {
    <tr>
        <td>@i.Sort</td>
        <td>@i.Name</td>
        <td>@Convert.ToDecimal(i.Price).ToString()</td>
        <td>@i.Stock</td>
        <td><input type="button" value="Edit" onclick="location.href =
        '@Url.Action("Edit", "Bake", new MetalBandBakery.MVC.ViewsModels.EditBakeViewModel() {  Warehouse = Model.Warehouse, BakeSort = i.Sort[0]})'" /></td>
    </tr>
    }
</table>

