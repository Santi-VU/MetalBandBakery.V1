@model MetalBandBakery.MVC.ViewsModels.ListBakeViewModel

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products list</h2>
<table class="table">
    <tr>
        <th>Sort</th>
        <th>Name</th>
        <th>Price</th>
        <th></th>
    </tr>
    
    @foreach (var i in Model.bakes)
    {
    <tr>
        <td>@i.Sort</td>
        <td>@i.Name</td>
        <td>@Convert.ToDecimal(i.Price).ToString()</td>
        <td><input type="button" value="Edit" onclick="location.href =
        '@Url.Action("Edit", "Product", new MetalBandBakery.MVC.Models.Bake { Sort = i.Sort, Name = i.Name, Materials = i.Materials, Stock = i.Stock })'" /></td>
    </tr>
    }
</table>

