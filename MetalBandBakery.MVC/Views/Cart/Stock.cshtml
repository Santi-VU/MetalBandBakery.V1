@model MetalBandBakery.MVC.ViewsModels.ListWarehouseViewModel

@{
    ViewBag.Title = "Stock";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string aux = "";
}

<h2>List of warehouses</h2>
<table class="table">
    <tr>
        <th>Name</th>
        <th></th>
    </tr>

    @foreach (var i in Model.Warehouses)
    {
        {
            aux = i.Name;
        }
        <tr>
            <td>@i.Name</td>
            <td>
                <input type="button" value="View" onclick="location.href =
        '@Url.Action("Cart", "Cart", new MetalBandBakery.MVC.Models.Warehouse() { Name = i.Name })'" />
            </td>
        </tr>
    }
</table>
