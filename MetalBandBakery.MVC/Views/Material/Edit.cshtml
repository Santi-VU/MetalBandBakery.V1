@model MetalBandBakery.MVC.Models.Material

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Editing Product: @Model.Name</h3>
@using (Html.BeginForm("MaterialEdited", "Material", FormMethod.Post))
{
    {
        @Html.TextBoxFor(model => model.Name, new { @readonly = "readonly" })
        <br />
        @Html.TextBoxFor(model => model.Price)
        <br />
        <input type="submit" value="Edit" />
    }
}